<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MoreFragment"
    android:background="@color/purple_500"
    android:id="@+id/webViewContainer">

    <!-- TODO: Update blank fragment layout -->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/insuranceIV"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/cropinsuranceimg"
            android:clickable="true"
            android:onClick="openWebView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="35dp" />

        <ImageView
            android:id="@+id/diseasesIV"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/diseasesdetectionimg"
            android:clickable="true"
            android:onClick="openWebView"
            app:layout_constraintTop_toBottomOf="@id/insuranceIV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="35dp" />

        <ImageView
            android:id="@+id/aboutUsIV"
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:src="@drawable/soilprofileimage"
            android:clickable="true"
            android:onClick="openWebView"
            app:layout_constraintTop_toBottomOf="@id/diseasesIV"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="35dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
